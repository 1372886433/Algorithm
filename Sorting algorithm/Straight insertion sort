    public static int[] straightInsertionSort(int [] arr){
        if(arr == null) {
            throw new IllegalArgumentException();
        }
        for(int i = 2; i <= arr.length - 1; i++){// the index 0 is a sentinel and the index 1 does't need to be sorted.
            arr[0] = arr[i];
            int j;
            for(j = i - 1; arr[j] > arr[0]; j--){
                arr[j+1] = arr[j];
            }
            arr[j+1] = arr[0];
        }
        arr[0] = 0;
        return arr;
    }
